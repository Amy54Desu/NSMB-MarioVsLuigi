struct StageTileInstance {
    asset_ref<StageTile> Tile;
    FP Rotation;
    FPVector2 Scale;
}

global {
    list<StageTileInstance> Stage;
    FP Timer;
}

signal OnStageReset(bool full);

event TileChanged {
    Frame Frame;
    int TileX;
    int TileY;
    StageTileInstance NewTile;
}

event TileBroken {
    Frame Frame;
    entity_ref Entity;
    int TileX;
    int TileY;
    StageTileInstance Tile;
}

event TimerExpired {
    Frame Frame;
}