component Bobomb {
	FP ExplosionRadius;
	FP Speed;
	ushort DetonationFrames;

	[ExcludeFromPrototype] ushort CurrentDetonationFrames;
}

signal OnBobombExplodeEntity(entity_ref bobomb, entity_ref entity);

event BobombLit {
	nothashed Frame Frame;
	EntityRef Entity;
	bool Stomped;
}

event BobombExploded {
	nothashed Frame Frame;
	EntityRef Entity;
}